    <div class="text-center">
      <h2>Your next trip</h2>
      <div class="container">
        <div class="row">

          <div class="col-xs-12 col-sm-4">
            <div class="card" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('images/card-paris.jpg');">

              <div class="avatar-image">
               <%= image_tag "images/seb.jpg", class: "avatar" %>
             </div>
             <div class="city">
              <h3>Paris</h3>
            </div>
            <div class="card-description">
              <h3>Seb's house</h3>
              <p>Charming room with patio</p>
            </div>
          </div>
        </div>

        <div class="col-xs-12 col-sm-4">
          <div class="card" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('images/card-brussels.jpeg');">

            <div class="avatar-image">
             <%= image_tag "images/anne.jpg", class: "avatar" %>
           </div>
           <div class="city">
            <h3>Brussels</h3>
          </div>
          <div class="card-description">
            <h3>Anne's house</h3>
            <p>Lovely house</p>
          </div>
        </div>
      </div>

      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('images/card-london.jpeg');">



          <div class="avatar-image">
            <%= image_tag "images/romain.jpg", class: "avatar" %>
          </div>
          <div class="city">
            <h3>London</h3>
          </div>
          <div class="card-description">
            <h3>Romain's house</h3>
            <p>Very nice flat</p>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
</div>

<!-- Your newsletter code -->
<div class="news-letter text-center">
  <h2> Get news from us</h2>
  <p>Leave us your mail and get news from us</p>
  <form class="form-inline">
    <div class="form-group">
      <label for="form1">Email</label>
      <input type="text" class="form-control" id="form1" placeholder="enter your Email">
    </div>
    <button type="submit" class="btn btn-warning">Subscribe</button>
  </form>
</div>

<!-- Your map code -->
<div id="map" style="width: 100%; height: 400px;"></div>

<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js"></script>

<script type="text/javascript">
  var myLatlng = new google.maps.LatLng(48.8655909, 2.378983);

  var myOptions = {
    zoom: 16,
    center: myLatlng,
    scrollwheel: false,
    mapTypeId: google.maps.MapTypeId.ROADMAP,
  styles: [] // TODO: replace [] by array from https://snazzymaps.com/
};

var map = new google.maps.Map(document.getElementById('map'), myOptions);
var marker = new google.maps.Marker({
  position: myLatlng,
  map: map,
  title: "You are here!"
});
</script>


